                        class Links
                        {
                                /*%FSM<LINK "Wait_for_Crew">*/
                                class Wait_for_Crew
                                {
                                        itemno = 10;
                                        priority = 3.000000;
                                        to="Init";
                                        precondition = /*%FSM<CONDPRECONDITION""">*/""/*%FSM</CONDPRECONDITION""">*/;
                                        condition=/*%FSM<CONDITION""">*/"time > _longTimer && {!isNull (gunner _unit)}"/*%FSM</CONDITION""">*/;
