<zone src="dzn_dynai%">
	<area src="dzn_dynai_area%">
		<location type="area" link="trigger" linkType="synchronized">Loction of trigger</location>
		...
		<!--OR-->
		<location type="point">Point location of GameLogic</location>
	</area>
	<wp src="dzn_dynai_wp%">
		<waypoint type="waypoint" linkType="waypoint">Position of waypoint</waypoint>
		...
		<!--OR-->
		<waypoint type="randomInArea">Randomly generated waypoints inside area or near point</waypoint>
	</wp>
	<units src="dzn_dynai_units%">
		<exampleGroup type="group" linkType="synchronized">
			<group>Reference group of units and gear</group>
		</exampleGroup>
	</units>
	<behavior src="dzn_dynai_behavior%">
		<behaviorOption type="waypoint" linkType="waypoint">
			<speed>waypointSpeed</speed>
			<combatMode>waypointCombatMode</combatMode>
			<formation>waypointFormation</formation>
			<!-- waypointDescription -- additional tags, e.g. 'no fear', 'retreat' - to assign templates -->
		</behaviorOption>
	</behavior>
	<respawn src="dzn_dynai_respawn%">
		<respawnPoint type="waypoint" linkType="waypoint">Position of respawn point</respawnPoint>
	</respawn>
</zone>
